{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*.ts"],
  "compilerOptions": {
    "paths": {
      "@src/*": ["src/*"],
      "@schemas/*": ["src/schemas/*"],
      "tsoa": ["node_modules/tsoa/dist"],
      "tsoa/": ["node_modules/tsoa/dist/"]
    }
  },
  "spec": {
    "outputDirectory": "dist/swagger",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "src"
  }
}
